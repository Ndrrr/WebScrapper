@page
@model IndexModel
@using GetData


@{
    ViewData["Title"] = "Home page";
}
<body>
    
    <form method="post" >
        <fieldset>
            <legend>Search From Amazon</legend>
            <div>
            <label for="DesiredProduct">Desired Product:</label>
            <input type="text" name="DesiredProduct" value="" />
            </div>
            <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
            </div>
        </fieldset>
        </form>
        @if(Model.flag==true){
            <table>
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Price</td> 
                    <td>Rating</td>
                    <td>Seller</td>
                    </tr>
            </thead>
            <tbody>
                @foreach(var val in Model.Products)
                {
                    <tr><td>@val.Title</td><td>@val.Price</td><td>@val.Rating</td> <td>@val.Seller</td></tr>
                }
            </tbody>
        </table>
       }
</body>

